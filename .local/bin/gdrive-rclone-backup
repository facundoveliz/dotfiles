#!/bin/bash

# notes
rclone copy --update --verbose --transfers 30 --checkers 8 --contimeout 60s --timeout 300s --retries 3 --low-level-retries 10 --stats 1s "/home/facundo/Notes" "gdrive:/Notes/"

# misc stuff
rclone copy --update --verbose --transfers 30 --checkers 8 --contimeout 60s --timeout 300s --retries 3 --low-level-retries 10 --stats 1s "/home/facundo/Documents" "gdrive:/Backup/Documents/"

# work
rclone copy --update --verbose --transfers 30 --checkers 8 --contimeout 60s --timeout 300s --retries 3 --low-level-retries 10 --stats 1s "/mnt/1TB/Work" "gdrive:/Work/"

# misc personal documents
rclone bisync --resync --update --verbose --transfers 30 --checkers 8 --contimeout 60s --timeout 300s --retries 3 --low-level-retries 10 --stats 1s "gdrive:/Documentos/" "/mnt/1TB/Documentos/"
