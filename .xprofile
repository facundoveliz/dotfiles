#!/bin/sh

# misc
xset s off # turn off screensaver
xset -dpms # disable turn off screen
xset r rate 351 60 # keyboard repeat rate

# keys
setxkbmap -layout us
setxkbmap -option caps:escape
setxkbmap -option compose:menu

# set 75hz
xrandr --newmode "1920x1080_75.00"  220.75  1920 2064 2264 2608  1080 1083 1088 1130 -hsync +vsync
xrandr --addmode HDMI-1 "1920x1080_75.00"
xrandr --addmode DP-3 "1920x1080_75.00"
xrandr --output HDMI-1 --mode "1920x1080_75.00"
xrandr --output DP-3 --mode "1920x1080_75.00"
