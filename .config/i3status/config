general {
        colors = true
        interval = 5
}

order += "disk /"
/* order += "battery all" */
order += "load"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%H:%M:%S %d-%m-%Y"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
